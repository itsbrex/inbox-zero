{
  "name": "inbox-zero",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./apps/web",
    "dev": "turbo dev --filter=./apps/web",
    "test": "turbo run test --filter=./apps/web",
    "lint": "turbo lint",
    "prepare": "husky",
    "ncu": "ncu -u -ws",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "setup": "tsx packages/cli/src/main.ts setup",
    "start:cli": "tsx packages/cli/src/main.ts start",
    "docker:local:build": "./docker/scripts/publish-ghcr.sh --local",
    "docker:local:push": "./docker/scripts/publish-ghcr.sh",
    "docker:local:run": "./docker/scripts/run-local.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@clack/prompts": "0.11.0",
    "@turbo/gen": "2.7.6",
    "commander": "14.0.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.5",
    "prettier": "3.6.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "4.21.0",
    "turbo": "2.7.1",
    "ultracite": "7.0.12"
  },
  "packageManager": "pnpm@10.28.0+sha512.05df71d1421f21399e053fde567cea34d446fa02c76571441bfc1c7956e98e363088982d940465fd34480d4d90a0668bc12362f8aa88000a64e83d0b0e47be48",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "ultracite fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.0.10",
      "@types/react-dom": "19.0.4"
    },
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "@sentry/cli",
      "core-js",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}