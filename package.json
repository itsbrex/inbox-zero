{
  "name": "inbox-zero",
  "private": true,
  "scripts": {
    "build": "turbo build --filter=./apps/web",
    "dev": "turbo dev --filter=./apps/web",
    "test": "turbo run test --filter=./apps/web",
    "lint": "turbo lint",
    "prepare": "husky install",
    "ncu": "ncu -u -ws",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "setup": "tsx packages/cli/src/main.ts setup"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@clack/prompts": "0.11.0",
    "@turbo/gen": "2.7.5",
    "commander": "14.0.2",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "4.21.0",
    "turbo": "2.7.5",
    "ultracite": "7.0.12"
  },
  "packageManager": "pnpm@10.28.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "ultracite fix"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.9",
      "@types/react-dom": "19.2.3"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@sentry/cli",
      "@swc/core",
      "core-js",
      "core-js-pure",
      "esbuild",
      "prisma",
      "protobufjs",
      "sharp"
    ]
  }
}
